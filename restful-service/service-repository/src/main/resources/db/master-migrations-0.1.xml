<?xml version="1.0" encoding="UTF-8" standalone="no"?>

<databaseChangeLog xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.5.xsd">

    <changeSet id="create.contacts.table" author="emils.seflers">
        <createTable tableName="contacts">
            <column name="id" type="VARCHAR(36)">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="phone_number" type="VARCHAR(255)" />
            <column name="email" type="VARCHAR(30)" />
            <column name="registered_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create.locations.table" author="emils.seflers">
        <createTable tableName="locations">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="contact_id" type="uuid">
                <constraints nullable="false"
                             foreignKeyName="fk_locations_contact_information_id"
                             referencedTableName="contacts"
                             referencedColumnNames="id"
                />
            </column>
            <column name="address" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="city" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="latitude" type="DECIMAL(10, 8)">
                <constraints nullable="false" />
            </column>
            <column name="longitude" type="DECIMAL(11, 8)">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create.people.table" author="emils.seflers">
        <createTable tableName="people">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="contact_id" type="uuid">
                <constraints nullable="false"
                             foreignKeyName="fk_players_contact_information_id"
                             referencedTableName="contacts"
                             referencedColumnNames="id"
                />
            </column>
            <column name="first_name" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="person_code" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="birth_day" type="DATE">
                <constraints nullable="false"/>
            </column>
            <column name="registered_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create.sports_classes.table" author="emils.seflers">
        <createTable tableName="sports_classes">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="registered_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create.licences.table" author="emils.seflers">
        <createTable tableName="licences">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="licence_number" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="licence_type" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="registered_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create.clubs.table" author="emils.seflers">
        <createTable tableName="clubs">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(30)">
                <constraints nullable="false"/>
            </column>
            <column name="image" type="VARCHAR(255)" />
            <column name="contact_id" type="uuid">
                <constraints
                        nullable="false"
                        foreignKeyName="fk_clubs_contact_information_id"
                        referencedTableName="contacts"
                        referencedColumnNames="id"
                />
            </column>
            <column name="registered_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create.players.table" author="emils.seflers">
        <createTable tableName="players">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="person_id" type="uuid">
                <constraints
                        nullable="false"
                        foreignKeyName="fk_players_person_id"
                        referencedTableName="people"
                        referencedColumnNames="id"
                />
            </column>
            <column name="club_id" type="uuid">
                <constraints
                        nullable="true"
                        foreignKeyName="fk_players_club_id"
                        referencedTableName="clubs"
                        referencedColumnNames="id"
                />
            </column>
            <column name="licence_id" type="uuid">
                <constraints
                        foreignKeyName="fk_players_licence_id"
                        referencedTableName="licences"
                        referencedColumnNames="id"
                />
            </column>
            <column name="sports_class_id" type="uuid">
            </column>
            <column name="image" type="VARCHAR(255)" />
            <column name="rating" type="INTEGER">
                <constraints nullable="false"/>
            </column>
            <column name="gender" type="ENUM('MALE', 'FEMALE')">
                <constraints nullable="false"/>
            </column>
            <column name="registered_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="edit.players_licence.foreign_key_constraint" author="emils.seflers">
        <dropForeignKeyConstraint
                baseTableName="players"
                constraintName="fk_players_licence_id"
        />
        <addForeignKeyConstraint
                baseTableName="players"
                baseColumnNames="licence_id"
                constraintName="fk_players_licence_id"
                referencedTableName="licences"
                referencedColumnNames="id"
                onDelete="CASCADE"
        />
    </changeSet>
    <changeSet id="create.categories.table" author="emils.seflers">
        <createTable tableName="categories">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="color" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create.competitions.table" author="emils.seflers">
        <createTable tableName="competitions">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="VARCHAR(500)">
                <constraints nullable="true"/>
            </column>
            <column name="image_location" type="VARCHAR(500)">
                <constraints nullable="true"/>
            </column>
            <column name="registration_open_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="registration_close_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="start_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="end_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="category_id" type="uuid">
                <constraints
                        nullable="false"
                        foreignKeyName="fk_competitions_category_id"
                        referencedTableName="categories"
                        referencedColumnNames="id"
                />
            </column>
            <column name="registered_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create.attachments.table" author="emils.seflers">
        <createTable tableName="attachments">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="file_location" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="competition_id" type="UUID">
                <constraints
                        nullable="true"
                        foreignKeyName="fk_attachments_competition_id"
                        referencedTableName="competitions"
                        referencedColumnNames="id"
                />
            </column>
            <column name="registered_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create.competition_players.table" author="emils.seflers">
        <createTable tableName="competition_players">
            <column name="competition_id" type="UUID">
                <constraints
                        nullable="false"
                        primaryKey="true"
                        primaryKeyName="PK_COMPETITION_PLAYER_ID"
                />
            </column>
            <column name="player_id" type="UUID">
                <constraints
                        nullable="false"
                        primaryKey="true"
                        primaryKeyName="PK_COMPETITION_PLAYER_ID"
                />
            </column>
            <column name="placement" type="INTEGER">
                <constraints nullable="true"/>
            </column>
            <column name="rating_change" type="INTEGER">
                <constraints nullable="true"/>
            </column>
            <column name="registered_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create.referees.table" author="emils.seflers">
        <createTable tableName="referees">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="person_id" type="uuid">
                <constraints
                        nullable="false"
                        foreignKeyName="fk_referees_person_id"
                        referencedTableName="people"
                        referencedColumnNames="id"
                />
            </column>
            <column name="city" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="category" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="commission_number" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="registered_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet id="create.competition_referees.table" author="emils.seflers">
        <createTable tableName="competition_referees">
            <column name="competition_id" type="UUID">
                <constraints
                        nullable="false"
                        primaryKey="true"
                        primaryKeyName="PK_COMPETITION_REFEREE_ID"
                />
            </column>
            <column name="referee_id" type="UUID">
                <constraints
                        nullable="false"
                        primaryKey="true"
                        primaryKeyName="PK_COMPETITION_REFEREE_ID"
                />
            </column>
            <column name="role" type="VARCHAR(500)">
                <constraints nullable="false"/>
            </column>
            <column name="registered_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="DATETIME">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>